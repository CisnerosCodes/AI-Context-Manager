{
  "manifest_version": 3,
  "name": "AI Context Manager",
  "version": "0.1.1",
  "description": "Save, organize, and quickly inject reusable context snippets into AI chat interfaces.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*"
  ],
  "action": {
    "default_title": "AI Context Manager",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/storage/contexts.js", "src/storage/categories.js", "src/common/constants.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
